{
  "manifest_version": 3,
  "name": "SandboxBridge",
  "version": "1.0.0",
  "description": "Execute custom JavaScript in isolated sandbox with full DOM access and zero page detection",
  "minimum_chrome_version": "120",
  
  "permissions": [
    "scripting",
    "tabs"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "sandbox-bridge.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  
  "web_accessible_resources": [
    {
      "resources": ["sandbox.html"],
      "matches": ["<all_urls>"]
    }
  ]
}